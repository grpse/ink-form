{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "module": "Node16",
    "outDir": "lib",
    "strictNullChecks": true,
    "moduleResolution": "Node16",
    "allowJs": false,
    "rootDir": "src"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "lib", "docs"]
}
